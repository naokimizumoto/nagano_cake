<h4>ジャンル一覧·追加</h4>


<%= form_with model: @genre, url:admin_genres_path, local: true do |f|%>
  <div class="field">
    <%= f.label :ジャンル名 %><br/>
    <%= f.text_field :name, autofocus: true %>
    <%= f.submit "新規登録" %>
  </div>
<% end %>



<table>
  <thead>ジャンル</thead>
  <tbody>
       <% @genres.each do |genre|%>
        <tr>
         <td>
         <%= genre.name%>
         </td>
         <td><%= link_to "編集する", edit_admin_genre_path(genre) %> </td>
          </tr>
       <% end %>

  </tbody>
</table>