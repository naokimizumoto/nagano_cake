<div class="container">
  <div class="row">
    <h4>注文履歴一覧</h4>

<table class="table">
  <thead class="thead-light">
    <tr>
      <td><strong>購入日</strong>時</td>
      <td><strong>購入者</strong></td>
      <td><strong>注文個数</strong></td>
      <td><strong>注文ステータス</strong></td>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
     <tr>
       <% link_to admin_order_path(order.id) , class: "text-secondary" do %>
         <td><%=order.created_at%></td>
       <% end %>
         <td><%=order.customer.fullname%></td>
         <% @sum=0 %>
       <% order.order_details.each do |order_detail|%>
         <% @sum+=order_detail.amount %>
       <% end %>
         <td> <%= @sum  %></td>
         <td><%=order.status%></td>
      </tr>
     <% end %>
  </tbody>
</table>
<%= paginate @orders %>
</div>
</div>