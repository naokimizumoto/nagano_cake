<h4>会員一覧</h4>

<table>
  <thead>
    <tr>
    <td>会員ID</td>
    <td>氏名</td>
    <td>メールアドレス</td>
    <td>ステータス</td>
    </tr>
  </thead>

  <tbody>
      <% @customer.each do |customer| %>
        <tr>
          <td><%=customer.id%></td>
          <td>
          <%= link_to admin_customer_path(customer.id) do %>
            <%=  customer.last_name %><%= customer.first_name %>
          <% end %>
          </td>
          <td><%=customer.email%></td>
          <% if customer.is_deleted!=true %>
          <td>有効</td>
          <%else%>
          <td>退会</td>
          <% end %>
        </tr>
      <% end %>
  </tbody>
</table>