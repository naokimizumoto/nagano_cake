<h4 >商品詳細</h4>
<div class="container">
  <div class="row">
    <div class="col-lg-4">
      <%= attachment_image_tag @item, :image, size: "300x300", format: 'jpeg' %>
    </div>
 <table>
   <tbody>
     <tr>
       <td>商品名</td>
       <td> <%=@item.name %></td>
     </tr>
     <tr>
       <td>商品説明</td>
       <td><%=@item.introduction %></td>
     </tr>
     <tr>
       <td>ジャンル</td>
       <td><%=@item.genre.name %></td>
     </tr>
     <tr>
       <td>税込価格（税抜価格）</td>
       <td><%=(@item.price*1.1).round(0)%>(<%=@item.price %>)円</td>
     </tr>
     <tr>
       <td>販売ステータス</td>
       <% if @item.is_active==true %>
       <td class="text-success">販売中</td>
　     <% else  %>
　     <td class="text-success">販売停止中</td>
       <% end %>
     </tr>
     <tr>
       <td><%= link_to "編集する", edit_admin_item_path(@item.id), class: "btn btn-success"%></td>
     </tr>
   </tbody>
 </table>
 </div>
</div>