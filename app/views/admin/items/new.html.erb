<% if @item.errors.any? %>
  <%= @item.errors.count %>件のエラーが発生しました
  <% @item.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>


<h4>商品新規登録</h4>
<div class="container">
  <div class="row">
    <div class="col-lg-4">
    </div>
     <%= form_with model: @item, url: admin_items_path, local: true do |f|%>
        <h4>商品画像 </h4>
        <%= f.attachment_field :image, autofocus: true%>

        <h4>商品名</h4>
        <%= f.text_field :name, :placeholder => "商品名" ,autofocus: true %>

        <h4>商品説明</h4>
        <%= f.text_area :introduction, :placeholder => "ここに説明を記述します" ,autofocus: true %>

        <h4>ジャンル</h4>
        <%= f.label :genre_id, 'ジャンル' %>
        <%= f.select :genre_id, {'ケーキ': 1, '和菓子': 2, 'プリン': 3, 'キャンディ': 4}, { include_blank: '選択してください'}, { class: 'form-control' , required: true } %>

        <h4>税抜価格</h4>
        <%= f.text_field :price, :placeholder => "1000" ,autofocus: true %><p>円</p>
        <h4>販売ステータス</h4>
        <%= f.radio_button :is_active, :true %>
        <%= f.label :is_active, "販売中", {value: :true, style: "display: inline-block;"} %>
        <%= f.radio_button :is_active, :false %>
        <%= f.label :is_active, "販売停止中", {value: :false, style: "display: inline-block;"} %>
        <h4></h4>
        <%= f.submit "新規登録",class: "btn btn-success" %>
      <% end %>

  </div>
</div>
