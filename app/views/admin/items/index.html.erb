<%= link_to "新規登録", new_admin_item_path, class: "btn btn-success" %>

<h4>商品一覧</h4>
<div class="container">
  <div class="row">
    <table class="table table-striped">
      <thead>
        <tr>
          <td><strong>商品ID</strong></td>
          <td><strong>商品名</strong></td>
          <td><strong>税抜価格</strong></td>
          <td><strong>ジャンル</strong></td>
          <td><strong>ステータス</strong></td>
        </tr>
      </thead>
      <tbody>
        <% @items.each do |item| %>
          <tr>
            <td><%=item.id  %></td>
            <td><%=link_to item.name,admin_item_path(item.id),class: "text-dark" %></td>
            <td><%= item.price %></td>
            <td><%= item.genre_id %></td>
          <% if item.is_active==true %>
            <td class="text-success"> 販売中</td>
　　　  　<% else  %>
　　　    　<td class="text-success">販売停止中</td>
          <% end %>
         </tr>
       <% end %>
     </tbody>
  </table>
 <%= paginate @items %>
 </div>
</div>
