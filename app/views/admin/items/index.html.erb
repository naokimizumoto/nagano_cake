<%= link_to "新規登録", new_admin_item_path, class: "btn btn-success" %>

<h4>商品一覧</h4>
<div class="container">
  <div class="row">
    <table class="table table-striped">
      <thead>
        <tr>
          <td>商品ID</td>
          <td>商品名</td>
          <td>税抜価格</td>
          <td>ジャンル</td>
          <td>ステータス</td>
        </tr>
      </thead>
      <tbody>
        <% @items.each do |item| %>
          <tr>
            <td><%=item.id  %></td>
            <td><%=link_to item.name,admin_item_path(item.id) %></td>
            <td><%= item.price %></td>
            <td><%= item.genre_id %></td>
          <% if item.is_active==true %>
            <td> 販売中</td>
　　　  　<% else  %>
　　　    　<td>販売停止中</td>
          <% end %>
         </tr>
       <% end %>
     </tbody>
  </table>
 </div>
</div>