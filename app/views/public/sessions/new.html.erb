
<h2>ログイン</h2>

<%= form_with model: @customer, url: customer_session_path, local: true do |f| %>
  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :パスワード %><br />
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit "ログイン" %>
  </div>

<% end %>

<%= render "public/shared/links" %>
<p>会員登録がお済でない方</p>
<%= link_to "こちら", new_customer_registration_path %><p>から新規登録を行ってください</p>
