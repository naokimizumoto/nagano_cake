  <h4>ショッピングカート</h4>

  <%= link_to "カートを空にする",cart_items_destroy_all_path, method: :delete %>


   <table>
     <thead>
       <tr>
         <td>商品名</td>
         <td>単価（税込）</td>
         <td>数量</td>
         <td>小計</td>
         <td>   </td>
       </tr>
     </thead>
     <tbody>
      <% @cart_items.each do |cart_item| %>
       <tr>
         <td><%= cart_item.item.name%></td>
         <td><%= cart_item.item.price%></td>
         <td>
          <%= form_with model: @cart_item,url: cart_items_path, local: true do |f|%>
         <%= f.select :amount,[['1',1],['2',2]],{include_blank: true, selected: 1 } %>
         <% end %>
         <%= link_to "変更", cart_items_path%>
         </td>
         <td><%= cart_item.item.price*cart_item.amount%></td>
         <td><%= link_to "削除する", cart_item_path(cart_item.id), method: :delete %></td>
       </tr>
        <% end %>
     </tbody>
   </table>
   <table>
    <tbody>
     <tr>
      <td>合計</td>
      <td></td>
     </tr>
    </tbody>
   </table>

