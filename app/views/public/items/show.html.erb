<div class="container">
  <div class="row">
      <div class="col-lg-6">
     <h2><%= attachment_image_tag @item, :image,size:"500x300" %></h2>
     </div>
     <div class="col-lg-6">
   <%= form_with model: @cart_item, local:true do |f| %>
    <table>
     <tr><td><strong><%= @item.name %></strong></td></tr>
     <tr><td><strong><%= @item.introduction %></strong></td></tr>
     <tr><td><strong>￥<%= @item.price %>（税込）</strong></td></tr>
      <tr>
        <td><%=f.select :amount, options_for_select(1..10) , include_blank: "個数選択" %></td>
        <%=f.hidden_field :item_id, :value => @item.id %>
        <%=f.hidden_field :customer_id, :value => current_customer.id %>
        <td><%= f.submit 'カートに入れる', class: "btn btn-primary" %></td>
      </tr>
      </table>
      <% end %>
    </div>
  </div>
</div>