<h2><%= attachment_image_tag @item, :image %></h2>
<%= @item.name %>
<%= @item.introduction %>
<%= @item.price %>

<%= form_with model: @cart_item, local:true do |f| %>
<%= f.select :amount, [["1", "2"]], include_blank: "個数選択" %>
<%=f.hidden_field :item_id, :value => @item.id %>
<%=f.hidden_field :customer_id, :value => current_customer.id %>
<%= f.submit 'カートに入れる' %>
<% end %>