<div class="container">
  <div class="row">
    <h4>会員情報編集</h4>
  </div>

<div class="row">
  <div class="col-md-10">
    <%= form_with model: @customer, local:true, method: :patch do |f| %>

      <div class="form row">
        <%= f.label "氏名", class: "col-md-2 col-form-label"%>
        <div class="form-row col-md-4">
          <%= f.text_field :last_name, autofocus: true %>
        </div>
        <div class="form-row col-md-4">
          <%= f.text_field :first_name, autofocus: true %>
        </div>
      </div>

       <div class="form row">
       <%= f.label "カナ", class: "col-md-2 col-form-label"%>
        <div class="form-row col-md-4">
      <%= f.text_field :last_name_kana, autofocus: true %>
        </div>
         <div class="form-row col-md-4">
      <%= f.text_field :first_name_kana, autofocus: true %>
      </div>

       <div class="form row">
       <%= f.label "ゆうびん番号", class: "col-md-2 col-form-label"%>
       <div class="form-row col-md-4">
      <%= f.text_field :postal_code, autofocus: true %>
      </div>

      <div class="form row">
      <%= f.label "住所", class: "col-md-2 col-form-label"%>
      <div class="form-row col-md-4">
      <%= f.text_field :address, autofocus: true %>
      </div>

      <div class="form row">
      <%= f.label "電話番号", class: "col-md-2 col-form-label"%>
       <div class="form-row col-md-4">
      <%= f.text_field :telephone_number, autofocus: true %>
       </div>

      <div class="form row">
      <%= f.label "メールアドレス", class: "col-md-6 col-form-label"%>
      <div class="form-row col-md-4">
       <%= f.text_field :email, autofocus: true %>
       </div>
       <%=f.submit "編集内容を保存", class: "btn btn-success"%>
    <% end %>
  </div>
</div>

<%= link_to "退会する", customers_withdraw_path,class: "btn btn-danger" %>

</div>