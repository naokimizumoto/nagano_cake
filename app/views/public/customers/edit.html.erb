<h4>会員情報編集</h4>

<%= form_with model: @customer,local:true do |f| %>
 <table>

  <tbody>
    <tr>
      <td>氏名</td>
      <td><%= @customer.last_name %></td>
      <td><%= @customer.first_name %></td>
    </tr>
    <tr>
      <td>カナ</td>
      <td><%= @customer.last_name_kana%></td>
      <td><%= @customer.first_name_kana%></td>
    </tr>
    <tr>
      <td>郵便番号</td>
      <td><%= @customer.postal_code%></td>
    </tr>
    <tr>
      <td>住所</td>
      <td><%= @customer.address%></td>
    </tr>
    <tr>
      <td>電話番号</td>
      <td><%= @customer.telephone_number%></td>
    </tr>
    <tr>
      <td>メールアドレス</td>
      <td><%= @customer.email%></td>
    </tr>
  </tbody>

 </table>
<% end %>

<%= link_to "編集内容を保存", customers_path(@customer.id) %>
<%= link_to "退会する", customers_withdraw_path %>