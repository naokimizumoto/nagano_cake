<div class="container">
  <div class="row">
    <%= form_with model: @address, local:true do |f| %>
     <%= f.label "郵便番号（ハイフンなし）"%>
     <%= f.text_field :postal_code %><br>
     <%= f.label "住所"%>
     <%= f.text_field :address %><br>
     <%= f.label "宛名"%>
     <%= f.text_field :name %><br>
  <% end %>

  <%= link_to "変更内容を保存", addresses_path,class:"btn btn-success" %>
  </div>
</div>