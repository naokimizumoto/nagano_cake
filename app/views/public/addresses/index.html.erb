<div class="container">
  <div class="row">
<h3><strong>配送先登録/一覧</strong></h3>
<div class="container">
  <div class="row">
    <%= form_with model: @address, url: addresses_path, local:true do |f| %>
      <%= f.label "郵便番号"%>
      <%= f.text_field :postal_code %><br>
      <%= f.label "住所"%>
      <%= f.text_field :address %><br>
      <%= f.label "宛名"%>
      <%= f.text_field :name %>
      <%= f.hidden_field :customer_id, value: current_customer.id %>
      <%= f.submit "新規登録" , class: "btn btn-success"%>
    <% end %>
  <div>
</div>

<table class="table table-bordered">
  <thead>
    <tr>
      <td>郵便番号</td>
      <td>住所</td>
      <td>宛名</td>
      <td>　　</td>
    </tr>
  </thead>
  <tbody>
    <% @addresses.each do |address|%>
    <tr>
      <td><%=address.postal_code%></td>
      <td><%=address.address%></td>
      <td><%=address.name%></td>
      <td>
        <%= link_to "編集する",edit_address_path(address.id), class: "btn btn-success" %>
        <%= link_to "削除する", address_path(address.id), class: "btn btn-danger",method: :delete%>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
  </div>
</div>