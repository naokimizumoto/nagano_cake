<h3>配送先登録/一覧</h3>

<%= form_with model: @address,url: addresses_path, local:true do |f| %>
  <h4>郵便番号（ハイフンなし）</h4>
  <%= f.text_field :postal_code %>
  <h4>住所</h4>
  <%= f.text_field :address %>
  <h4>宛名</h4>
  <%= f.text_field :name %>
  <%= f.submit "新規登録" %>
  <% end %>



<table>
  <thead>
    <tr>
      <td>郵便番号</td>
      <td>住所</td>
      <td>宛名</td>
      <td>　　</td>
    </tr>
  </thead>
  <tbody>
    <% @addresses.each do |address|%>
    <tr>
      <td><%=@address.postal_code%></td>
      <td><%=@address.address%></td>
      <td><%=@address.name%></td>
      <td>
        <%= link_to "編集する",edit_address_path(address.id) %>
        <%= link_to "削除する", addresses_path, method: :delete%>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>