<h4>注文情報入力</h4>

<%= form_with model: @order,url: orders_verification_path, local:true do |f| %>
<h4>支払方法</h4>
  <%= f.radio_button :payment_method, :credit_card %>
  <%= f.label :payment_method, "クレジットカート", {value: :credit, style: "display: inline-block;"} %>
  <%= f.radio_button :payment_method, :transfer %>
  <%= f.label :payment_method, "銀行振込", {value: :transfer , style: "display: inline-block;"} %>
  <% end %>
<h4>お届け先</h4>
<%= form_with model: @address,url: orders_verification_path, local:true do |f| %>
<ul>
  <li>
    <%= f.radio_button :address, :current_customer%>
    <%= f.label :address, "ご自身の住所", {value: :address, style: "display: inline-block;"} %>
    <%= @address.postal_code %><%= current_customer.address%> <%= @address.name%>
  </li>
  <li>
    <%= f.radio_button :address, :current_customer%>
    <%= f.label :address, "ご自身の住所", {value: :address, style: "display: inline-block;"} %>
    <%=f.collection_select :address, @addresses, :id, :name, { prompt: "選択してください" } %>
  </li>
  <li>
     <%= f.radio_button :address, :current_customer%>
    <%= f.label :address, "ご自身の住所", {value: :address, style: "display: inline-block;"} %>
    <table>
      <tr>
        <td>郵便番号（ハイフンなし）</td>
        <td><%= f.text_field :postal_code%></td>
      </tr>
      <tr>
        <td>住所</td>
        <td><%= f.text_field :address%></td>
      </tr>
      <tr>
        <td>宛名</td>
        <td><%= f.text_field :name%></td>
      </tr>
    </table>
  </li>
</ul>
<%= f.submit "確認画面へ進む"%>
<% end %>
