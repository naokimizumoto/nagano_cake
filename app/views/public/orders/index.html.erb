<div class="container">
  <div class="row">
    <h4>注文履歴一覧</h4>

<table  class="table table-bordered">>
  <thead>
    <tr>
      <td>注文日</td>
      <td>配送先</td>
      <td>注文商品</td>
      <td>支払金額</td>
      <td>ステータス</td>
      <td>注文詳細</td>
    </tr>
  </thead>
  <tbody>
    <%@orders.each do |order|%>
    <tr>
      <td><%=order.created_at%></td>
      <td><%= order.address%></td>
      <td><%= order.name%></td>
      <td><%=order.total_payment%></td>
      <td><%= order.status%></td>
      <td><%= link_to "表示する", order_path(order.id), class: "btn btn-primary"%></td>
    </tr>
    <% end %>
  </tbody>
</table>
  </div>
</div>